{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "title": "Rainfall affect on Max Temperature",
    "data": {
        "url": "https://raw.githubusercontent.com/jwil0129/FIT3179-A2/refs/heads/main/data/Weather%20Test%20Data.csv",
        "format": {
            "type": "csv",
            "parse": {
                "Rainfall": "number",
                "MaxTemp": "number"
            }
        }
    },
    "params": [
        {
            "name": "cityFilter",
            "select": {
                "type": "point",
                "fields": [
                    "Location"
                ]
            },
            "bind": "legend"
        }
    ],
    "transform": [
        {
            "filter": {
                "field": "Location",
                "oneOf": [
                    "Sydney",
                    "Melbourne",
                    "Brisbane",
                    "Perth",
                    "Adelaide",
                    "Hobart",
                    "Darwin",
                    "Canberra"
                ]
            }
        },
        {
            "calculate": "toNumber(datum.Rainfall)",
            "as": "RainfallNum"
        },
        {
            "calculate": "toNumber(datum.MaxTemp)",
            "as": "MaxTempNum"
        },
        {
            "filter": "isFinite(datum.RainfallNum) && isFinite(datum.MaxTempNum)"
        },
        {
            "filter": {
                "param": "cityFilter"
            }
        }
    ],
    "mark": {
        "type": "point",
        "filled": true,
        "opacity": 0.7
    },
    "encoding": {
        "x": {
            "field": "MaxTempNum",
            "type": "quantitative",
            "title": "Max Temperature (Â°C)",
            "scale": {
                "domain": [
                    0,
                    50
                ]
            }
        },
        "y": {
            "field": "RainfallNum",
            "type": "quantitative",
            "title": "Rainfall (mm)",
            "scale": {
                "domain": [
                    0,
                    200
                ]
            }
        },
        "color": {
            "field": "Location",
            "type": "nominal",
            "title": "Click to filter cities",
            "scale": { "domain": ["Sydney","Melbourne","Brisbane","Perth","Adelaide","Hobart","Darwin","Canberra"] }
        },
        "tooltip": [
            {
                "field": "Location",
                "title": "City"
            },
            {
                "field": "RainfallNum",
                "title": "Rainfall",
                "type": "quantitative",
                "format": ".1f"
            },
            {
                "field": "MaxTempNum",
                "title": "Temperature",
                "type": "quantitative",
                "format": ".1f"
            }
        ]
    }
}