{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Mean Temperature in Australia",
    "projection": {
        "type": "mercator"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jwil0129/FIT3179-A2/refs/heads/main/data/map.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jwil0129/FIT3179-A2/refs/heads/main/data/mean_temp.csv"
            },
            "mark": {
                "type": "circle",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "mean temperature",
                    "type": "quantitative",
                    "title": "Mean Temperature",
                    "scale": {
                        "domain": [
                            4,
                            8
                        ]
                    }
                },
                "color": {
                    "field": "temperature",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "blues"
                    }
                }
            }
        }
    ]
}