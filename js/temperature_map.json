{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 550,
    "title": "Mean Temperature in Australia",
    "projection": {
        "type": "mercator"
    },
    "params": [
        {
            "name": "tempRange",
            "bind": {
                "input": "select",
                "name": "Temperature Range: ",
                "options": [
                    null,
                    "cool",
                    "mild",
                    "warm",
                    "hot"
                ],
                "labels": [
                    "All",
                    "Cool (<15°C)",
                    "Mild (15–25°C)",
                    "Warm (25–30°C)",
                    "Hot (>30°C)"
                ]
            }
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jwil0129/FIT3179-A2/refs/heads/main/data/map.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jwil0129/FIT3179-A2/refs/heads/main/data/mean_temp.csv",
                "format": {
                    "type": "csv",
                    "parse": {
                        "LAT": "number",
                        "LON": "number",
                        "Annual": "number"
                    }
                }
            },
            "transform": [
                {
                    "filter": "isFinite(datum.LAT) && isFinite(datum.LON) && isFinite(datum.Annual)"
                },
                {
                    "filter": "tempRange == null || (tempRange == 'cool' ? datum.Annual < 15 : tempRange == 'mild' ? datum.Annual >= 15 && datum.Annual < 25 : tempRange == 'warm' ? datum.Annual >= 25 && datum.Annual < 30 : datum.Annual >= 30)"
                }
            ],
            "mark": {
                "type": "circle",
                "opacity": 0.85,
                "stroke": "white",
                "strokeWidth": 0.6
            },
            "encoding": {
                "longitude": {
                    "field": "LON",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "LAT",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Annual",
                    "type": "quantitative",
                    "title": "Mean Temperature (°C)",
                    "scale": {
                        "range": [
                            20,
                            160
                        ]
                    }
                },
                "color": {
                    "field": "Annual",
                    "type": "quantitative",
                    "title": "Mean Temperature (°C)",
                    "scale": {
                        "scheme": "reds"
                    }
                },
                "tooltip": [
                    {
                        "field": "STATION_NAME",
                        "title": "Station"
                    },
                    {
                        "field": "Annual",
                        "title": "Annual Mean (°C)",
                        "format": ".1f"
                    },
                    {
                        "field": "LAT",
                        "title": "Latitude",
                        "format": ".2f"
                    },
                    {
                        "field": "LON",
                        "title": "Longitude",
                        "format": ".2f"
                    }
                ]
            }
        }
    ]
}