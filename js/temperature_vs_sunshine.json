{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "title": "Sunshine vs Max Temperature",
    "data": {
        "url": "https://raw.githubusercontent.com/jwil0129/FIT3179-A2/refs/heads/main/data/Weather%20Test%20Data.csv",
        "format": {
            "type": "csv",
            "parse": {
                "Sunshine": "number",
                "MaxTemp": "number"
            }
        }
    },
    "params": [
        {
            "name": "cityFilter",
            "select": {
                "type": "point",
                "fields": [
                    "Location"
                ]
            },
            "bind": "legend"
        }
    ],
    "transform": [
        {
            "filter": {
                "field": "Location",
                "oneOf": [
                    "Sydney",
                    "Melbourne",
                    "Brisbane",
                    "Perth",
                    "Adelaide",
                    "Hobart",
                    "Darwin",
                    "Canberra"
                ]
            }
        },
        {
            "calculate": "toNumber(datum.Sunshine)",
            "as": "SunshineNum"
        },
        {
            "calculate": "toNumber(datum.MaxTemp)",
            "as": "MaxTempNum"
        },
        {
            "filter": "isFinite(datum.SunshineNum) && isFinite(datum.MaxTempNum)"
        },
        {
            "filter": {
                "param": "cityFilter"
            }
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "point",
                "filled": true,
                "opacity": 0.7
            },
            "encoding": {
                "x": {
                    "field": "MaxTempNum",
                    "type": "quantitative",
                    "title": "Max Temperature (°C)",
                    "scale": { "domain": [0, 50] }
                },
                "y": {
                    "field": "SunshineNum",
                    "type": "quantitative",
                    "title": "Sunshine (hours)",
                    "scale": { "domain": [0, 16] }
                },
                "color": {
                    "field": "Location",
                    "type": "nominal",
                    "title": "Click a city to filter",
                    "scale": {
                        "domain": [
                            "Sydney",
                            "Melbourne",
                            "Brisbane",
                            "Perth",
                            "Adelaide",
                            "Hobart",
                            "Darwin",
                            "Canberra"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "Location"
                    },
                    {
                        "field": "SunshineNum",
                        "title": "Sunshine (h)",
                        "format": ".1f"
                    },
                    {
                        "field": "MaxTempNum",
                        "title": "Max Temp (°C)",
                        "format": ".1f"
                    }
                ]
            }
        }
    ]
}