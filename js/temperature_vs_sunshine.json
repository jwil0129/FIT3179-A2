{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "title": "Rainfall affect on Max Temperature",
    "data": {
        "url": "https://raw.githubusercontent.com/jwil0129/FIT3179-A2/refs/heads/main/data/Weather%20Test%20Data.csv"
    },
    "params": [
        {
            "name": "search",
            "value": "",
            "bind": {
                "placeholder": "name of city... "
            }
        }
    ],
    "transform": [
        {
            "filter": "search == '' || test(search, datum.location, 'i')"
        }
    ],
    "mark": {
        "type": "point",
        "filled": true,
        "opacity": 0.7
    },
    "encoding": {
        "x": {
            "field": "Rainfall",
            "type": "quantitative",
            "title": "Rainfall"
        },
        "y": {
            "field": "MaxTemp",
            "type": "quantitative",
            "title": "Max Temperatue"
        },
        "color": {
            "field": "Location",
            "type": "nominal",
            "title": "City",
            "legend": null
        },
        "tooltip": [
            {"field": "Location", "title": "City"},
            {"field": "Rainfall", "title": "Rainfall", "type": "quantitative", "format": ".1f"},
            {"field": "MaxTemp", "title": "Temperature", "type": "quantitative", "format": ".1f"}
        ]
    }
}